{
    "compilerOptions": {
        "declaration": false,
        "target": "es2015",  // Standard ของ javascript
        "module": "commonjs",
        "outDir": "./dist", //โฟว์เดอร์ output
        "sourceMap": false,
        "preserveConstEnums": true,
        "removeComments": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*.ts" //ตำแหน่งไฟล์และโฟเดอร์ที่กำหนดให้ Build
    ],
    "exclude": [
        "node_modules"
    ]
  }